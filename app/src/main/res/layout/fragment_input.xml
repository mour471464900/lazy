<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="13.5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="13.5dp">


        <RelativeLayout
            android:id="@+id/rlChange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#ff303030"
                android:textSize="15sp"
                android:text="选择文章" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/common_icon_go" />
        </RelativeLayout>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/text_hint_color"
         android:singleLine="true"
         android:ellipsize="end"
         android:textSize="12sp"
         android:layout_marginTop="6dp"
         android:layout_marginBottom="6dp"
         android:text="下方编辑框可以编辑输入，也可以通过选择文章填充数据"
         />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="bottom"
            android:hint="请输入编辑内容"
            android:padding="4dp"
            android:background="@drawable/shape_edit"
            android:textColorHint="@android:color/holo_blue_light"
            android:textCursorDrawable="@null" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_grey"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_publish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_motif"
                android:gravity="center"
                android:text="确认"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>